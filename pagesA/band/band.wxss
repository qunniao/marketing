page{
  background: #F1F1F1;
}

.addressItem{
  width: 90%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  background: rgb(66, 66, 66);
  margin-top: 20rpx;
  border-radius: 15rpx;
  margin-left: 5%;
}

.gouride{
  width: 100%;
  height: 120rpx;
}

.bandcard{
  width: 90%;
  margin-left: 5%;
  position: relative;
  padding-bottom: 20rpx;
}

.band_content{
  width: 100%;
  display: flex;
  line-height: 40rpx;
  padding: 10rpx 0;
  align-items: baseline;
}

.band_content image{
  width: 60rpx;
  height:60rpx;
  display: flex;
  margin-top: 20rpx;
}

.name{
  font-size: 28rpx;
  color: #333;
}

.band_name{
  font-size: 40rpx;
  color: #fff;
  position: absolute;
  margin-top: 28rpx;
  left:90rpx;
}

.band_number{
  font-size: 50rpx;
  color: #fff;
  margin-top: 50rpx;
  margin-left:15rpx;
  position: absolute;
}



.buttons{
  width: 90%;
  height: 80rpx;
  display: flex;
  align-items: center;
  position: absolute;
  left:5%;
}

.buttons button{
  width: 90%;
  height: 80rpx;
  font-size: 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  border-radius: 40rpx;
}

.buttons button:first-child{
  border: 1px solid #fb312f;
  color: #fb312f;
  margin-left: 30rpx;
}

.buttons2{
  width: 250rpx;
  height: 48rpx;
  margin-top: 160rpx;
  margin-left:15rpx;
  position: absolute;
}

.buttons2 button{
  width: 250rpx;
  height: 48rpx;
  font-size: 24rpx;
  background: rgb(66, 66, 66);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
}

.buttons2 button:first-child{
  border: 1px solid rgb(209, 209, 209);
  color: rgb(230, 230, 230);
}

