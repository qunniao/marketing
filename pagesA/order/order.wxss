page{
  background: #F2F1F1;
}

.header{
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  z-index: 10;
}

.search{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.search input{
  width: 82%;
  height: 80%;
  margin: 0 auto;
  border-radius: 50rpx;
  background: #E9E9E9;
  font-size: 28rpx;
  padding-left: 70rpx;
  padding-right: 20rpx;
}

.search image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 5%;
}

.classfication{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.classficationItem{
  width: 20%;
  height: 40rpx;
  float: left;
  text-align: center;
  padding-bottom: 10rpx;
}

.classficationItem text{
  color: #666;
}

.active{
  color: #fb312f;
  height: 40rpx;
  width: 20%;
  float: left;
  padding-bottom: 10rpx;
  text-align: center;
}

.active>text{
  padding-bottom: 10rpx;
  border-bottom: 2px solid #fb312f;
}

.orderList{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}

.orderItem{
  width: 95%;
  margin-left: 2.5%;
  border-radius: 15rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.orderItem:last-child{
  margin-bottom: 20rpx;
}

.orderBianhao_type{
  width: 100%;
  height: 70rpx;
  display: flex;
  position: relative;
  align-items: center;
  margin-top: 10rpx;
}

.bianhao{
  font-size: 28rpx;
  color: #666666;
  padding-left: 20rpx;
}

.changeToCloudStore{
  font-size: 28rpx;
  color: #006eff;
  padding-left: 20rpx;
}

.type{
  font-size: 30rpx;
  color: #fb312f;
  position: absolute;
  right: 20rpx;
}

.img_title_price_num{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  position: relative;
}

.img{
  width: 25%;
  height: 180rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.title{
  width: 50%;
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #333;
}

.price_num{
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 20rpx;
  text-align: right;
}

.price{
  font-size: 28rpx;
  color: #333;
}

.num{
  font-size: 30rpx;
  color: #333;
}

.gong_heji{
  width: 100%;
  height: 70rpx;
  position: relative;
  display: flex;
  right: 0;
  text-align: right;
}

.gongde{
  position: absolute;
  right: 20rpx;
}

.gong{
  font-size: 26rpx;
  color: #666666;
}

.heji{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  padding-left: 30rpx;
}

.twoButton{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  position: relative;
  border-top: 1px solid #E5E5E5;
}

.buttons{
  display: flex;
  align-items: center;
  position: absolute;
  right: 20rpx;
}

.buttons button{
  width: 200rpx;
  height: 65rpx;
  font-size: 28rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  border-radius: 40rpx;
}

.buttons button:first-child{
  border: 1px solid #666666;
  color: #666;
}

.buttons button:last-child{
  border: 1px solid #fb312f;
  color: #fb312f;
  margin-left: 30rpx;
}

.buttons2{
  border: 1px solid #006eff;
  color: #006eff;
  margin-left: 30rpx;
}