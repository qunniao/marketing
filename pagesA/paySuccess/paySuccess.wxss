page{
  background: #F9F9F9;
}

.header{
  width: 100%;
  background: #fff;
}

.headerTop{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.type{
  font-size: 60rpx;
  color: #fb312f;
  font-weight: bold;
  margin-top: 30rpx;
}

.typeimg{
  width: 160rpx;
  height: 160rpx;
  margin-left: 100rpx;
}

.caidai{
  width: 100%;
  height: 6rpx;
}

.tubiao_name_phone_address{
  display: flex;
  align-items: center;
  height: 170rpx;
}

.tubiao_name_phone_address image{
  width: 80rpx;
  height:95rpx;
  margin-left: 60rpx;
}

.name_phone_address{
  width: 60%;
  display: flex;
  flex-direction: column;
  padding-left: 50rpx;
}

.name_phone{
  display: flex;
  align-items: baseline;
}

.name{
  font-size: 28rpx;
  color: #333;
}

.phone{
  font-size: 24rpx;
  color: #333;
  padding-left: 30rpx;
}

.address{
  font-size: 28rpx;
  color: #868686;
  padding-top: 10rpx;
}

.center{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 20rpx;
}

.productList{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.productItem{
  width: 100%;
  height: 200rpx;
  background: #fff;
  display: flex;
  position: relative;
  padding-bottom: 20rpx;
}

.productItem image{
  width: 25%;
  height: 180rpx;
  margin: 20rpx 20rpx;
}

.title_guige_price_num{
  width: 65%;
  display: flex;
  flex-direction: column;
}

.title{
  font-size: 28rpx;
  padding-top: 15rpx;
}

.guige{
  font-size: 28rpx;
  color: #999999;
  padding-top: 20rpx;
}

.prcie_num{
  display: flex;
  margin-top: 15rpx;
}

.price{
  font-size: 26rpx;
  color: #fb312f;
}

.num{
  font-size: 26rpx;
  color: #333;
  position: absolute;
  right: 30rpx;
}

.classfication{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  background: #fff;
}

.classItem{
  width: 100%;
  height: 55rpx;
  line-height: 80rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.classItem:last-child{
  border: 0;
}

.itemTitle{
  font-size: 28rpx;
  color: #7e7d7d;
  padding-left: 20rpx;
  margin-left: 5%;
}

.itemPrice{
  font-size: 28rpx;
  color: #7e7d7d;
  position: absolute;
  right: 30rpx;
}

.itemTitle2{
  font-size: 30rpx;
  color: #000;
  padding-left: 20rpx;
  margin-left: 5%;
}

.itemPrice2{
  font-size: 30rpx;
  color: #000;
  position: absolute;
  right: 30rpx;
}

.order{
  width: 100%;
  display: flex;
  background: #fff;
  height: 300rpx;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.orderDetails{
  width: 90%;
  height: 200rpx;
  margin-left: 5%;
  border-bottom: 1px solid #F2F2F2;
}

.orderBianhao{
  font-size: 28rpx;
  color: #9D9D9D;
  margin-top: 50rpx;
}

.orderTime{
  font-size: 28rpx;
  color: #9D9D9D;
  margin-top: 30rpx;
}



.quxiao{
  width: 50%;
  background: #F4F4F4;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}

.liji{
  font-size: 32rpx;
  color: #fff;
  background: #fb312f;
  width: 50%;
  height: 100%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom{
  width: 100%;
  height: 150rpx;
  display: inline;
  align-items: center;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  border-top: 0.5px solid rgb(235, 233, 233);
}

.buttons{
  display: flex;
  align-items: center;
  position: relative;
  float:right;
  right: 20rpx;
  margin-top:30rpx;
}

.buttons button{
  width: 200rpx;
  height: 65rpx;
  font-size: 28rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  border-radius: 40rpx;
}

.buttons button:first-child{
  border: 1px solid #666666;
  color: #666;
}

.buttons button:last-child{
  border: 1px solid #fb312f;
  color: #fb312f;
  margin-left: 30rpx;
}

.gouwuche {
  display: flex;
  align-items: center;
  position: relative;
  float:left;
  left: 20rpx;
  margin-top:20rpx;
}

.gouwuche image {
  width: 40rpx;
  height: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.gouwuche button{
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.gouwuche button::after{
  border: none;
}

.gouwucehTitle {
  font-size: 26rpx;
  color: #666;
}