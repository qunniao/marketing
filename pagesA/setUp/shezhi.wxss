page{
  background: #F8F8F8;
}

.header{
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.classfication{
  width: 90%;
  margin-left: 5%;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #E1E1E5;
  position: relative;
}

.classfication:first-child{
  height: 150rpx;
}

.classficationTitle{
  font-size: 30rpx;
  color: #333;
}

.classfication image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  right: 0;
}

.youbian{
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
}

.name{
  font-size: 30rpx;
  color: #9C9C9C;
  padding-right: 10rpx;
}

.right{
  width: 15rpx;
  height: 15rpx;
  border-top: 2rpx solid #9C9C9C;
  border-right: 2rpx solid #9C9C9C;
  transform: rotate(45deg);
  margin-right:20rpx;
}

.classfication:last-child{
  border: 0
}

.shouhuodizhi{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.shouhuodizhi::after{
  border: none;
}

.shouhuodizhi text{
  padding-left: 5%;
}

.righta{
  width: 15rpx;
  height: 15rpx;
  border-top: 2rpx solid #9C9C9C;
  border-right: 2rpx solid #9C9C9C;
  transform: rotate(45deg);
  position: absolute;
  right: 8%;
}