/*主容器*/

.stepper {
  width: 220rpx;
  height: 60rpx;
  /*给主容器设一个边框*/
  border: 1rpx solid rgba(0, 0, 0, 0.2);
  border-radius: 3px;
  background: white;
  margin-top: -10rpx;
  margin-left: 260rpx;
}

/*加号和减号*/

.stepper .sign {
  width: 60rpx;
  line-height: 60rpx;
  text-align: center;
  float: left;
}

/*数值*/

.stepper .number {
  width: 96rpx;
  height: 60rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 16px;
  color: #000;
  /*给中间的input设置左右边框即可*/
  border-left: 1rpx solid rgba(0, 0, 0, 0.2);
  border-right: 1rpx solid rgba(0, 0, 0, 0.2);
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

