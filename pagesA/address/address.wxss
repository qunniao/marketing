page{
  background: #F1F1F1;
}

.addressItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 15rpx;
}

.gouride{
  width: 100%;
  height: 120rpx;
}

.name_phone_address{
  width: 90%;
  margin-left: 5%;
  position: relative;
  border-bottom: 1px solid #E3E3E3;
  padding-bottom: 20rpx;
}

.name_phone{
  width: 100%;
  display: flex;
  line-height: 40rpx;
  padding: 10rpx 0;
  align-items: baseline;
}

.name{
  font-size: 28rpx;
  color: #333;
}

.phone{
  font-size: 26rpx;
  color: #333;
  position: absolute;
  right: 0;
}

.address{
  font-size: 26rpx;
  color: #AAAAAA;
  padding-bottom: 10rpx;
}

.moren_edit_delete{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 5%;
  display: flex;
  align-items: center;
}

.moren{
  font-size: 26rpx;
  color: #fb312f;
}

.eidt_delete{
  display: flex;
  position: absolute;
  right: 5%;
}

.edit{
  display: flex;
  align-items: center;
  margin-left: 50rpx;
}

.edit image{
  width: 30rpx;
  height: 30rpx;
}

.editTitle{
  font-size: 26rpx;
  color: #333;
  padding-left: 10rpx;
}

.bottom{
  width: 100%;
  height: 100rpx;
  background: #fb312f;
  position: fixed;
  bottom: 0;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}