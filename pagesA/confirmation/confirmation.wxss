page{
  background: #F9F9F9;
}

.header{
  width: 100%;
  height: 200rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: relative;
}

.header image{
  width: 100%;
  height: 6rpx;margin-top: 0;
}

.name_phone_address{
  height: 100%;
  display: flex;
}

.name_more{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.name{
  font-size: 30rpx;
  color: #333;
}

.moren{
  font-size: 22rpx;
  padding: 0 10rpx;
  color: #fb312f;
  border: 1px solid #fb312f;
  margin-top: 20rpx;
}

.phone_address{
  display: flex;
  flex-direction: column;
}

.phone{
  font-size: 24rpx;
  color: #333;
  margin-top: 50rpx;
}

.address{
  width: 80%;
  font-size: 26rpx;
  color: #666;
  padding-top: 10rpx;
}

.xiugai{
  display: flex;
  position: absolute;
  top: 50rpx;
  right: 30rpx;
}

.xiugai image{
  width: 30rpx;
  height: 30rpx;
}

.xiugaiTitle{
  font-size: 24rpx;
  color: #909090;
  padding-left: 10rpx;
}

.center{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 20rpx;
}

.productList{
  display: flex;
  flex-direction: column;
}

.productItem{
  display: flex;
  background: #F9F9F9;
  margin-top: 20rpx;
  position: relative;
}

.productItem image{
  width: 28%;
  height: 160rpx;
  margin: 20rpx 30rpx;
}

.title_guige_price_num{
  display: flex;
  flex-direction: column;
}

.title{
  font-size: 26rpx;
  color: #333;
  padding-top: 20rpx;
  padding-right: 20rpx;
}

.guige{
  font-size: 26rpx;
  color: #999999;
  padding-top: 10rpx;
}

.price_num{
  display: flex;
  margin-top: 10rpx;
}

.price{
  font-size: 28rpx;
  color: #fb312f;
  position: absolute;
  bottom: 20rpx;
}

.num{
  font-size: 26rpx;
  color: #333;
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
}

.productYh{
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}

.yhItem{
  width: 90%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;
  margin-left: 5%;
  position: relative;
}

.yhTitle{
  font-size: 30rpx;
  color: #333;
}

.yhPrice{
  font-size: 30rpx;
  color: #fb312f;
}

.youbuainde{
  position: absolute;
  right: 0;
}

.yunfei{
  font-size: 30rpx;
  color: #666666;
}

.yhItem:last-child{
  border: 0;
}

.liuyan{
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  background: #fff;
}

.liuyanTitle{
  width: 90%;
  margin-left: 5%;
  height: 200rpx;
  border-bottom: 1px solid #F2F2F2;
  padding-top: 30rpx;
  display: flex;
}

.liuyanName{
  font-size: 30rpx;
  color: #333;
}

.liuyanTitle textarea{
  width: 80%;
  height: 100%;
  font-size: 30rpx;
  margin-left: 5%;
}

.bottom{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  background: #F4F4F4;
}

.bottomLeft{
  display: flex;
  flex-direction: column;
}

.heji{
  display: flex;
}

.hejiTitle{
  font-size: 30rpx;
  color: #333;
  padding-left: 30rpx;
  padding-top: 10rpx;
}

.pricede{
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.hejiPrice{
  font-size: 30rpx;
  color: #fb312f;
}

.gong{
  font-size: 26rpx;
  color: #666666;
}

.submit{
  width: 50%;
  height: 100%;
  background: #fb312f;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  right: 0;
}

.dangzhu{
  width: 100%;
  height: 130rpx;
}

.buzhidao{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.buzhidao text{
  font-size: 30rpx;
  padding-left: 30rpx;
}