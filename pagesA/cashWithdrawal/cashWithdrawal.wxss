page{
  background: #F5F3F3;
}

.header{
  width: 90%;
  height:500rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 20rpx;
  margin-left:5%;
}

.balance{
  width: 100%;
  height: 180rpx;
  line-height: 150rpx;
  display: flex;
  align-items: baseline;
  border-bottom: 0.5px solid #E5E5E5;
}

.balanceTitle{
  font-size: 30rpx;
  padding-left: 30rpx;
}

.money{
  font-size: 30rpx;
  padding-left: 20rpx;
  height:50rpx;
  display: flex;
}

.tianxian{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.tixianTitle{
  font-size: 30rpx;
  color: #666;
  padding-top: 30rpx;
  padding-left: 30rpx;
}

.jine{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  margin-top:60rpx;
}

.jineTitle{
  font-size: 80rpx;
  font-weight: bold;
  padding-left: 20rpx;
}

.jine input{
  width: 70%;
  height: 90%;
  margin-left: 5%;
  font-size: 80rpx;
}

.submit{
  width: 100%;
  height: 100rpx;
  margin-top: 100rpx;
}

.submit button{
  font-size: 34rpx;
  width: 60%;
  height: 100%;
  margin-left: 20%;
  border-radius: 15rpx;
  background: #fb312f;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}